# Ensure package-lock.json is always updated/created
package-lock=true

# Use the exact versions specified in package-lock.json
# This prevents npm from trying to update the lockfile during install
save-exact=false

# Ensure we're using lockfile version 3 (npm 7+)
lockfile-version=3

# Automatic installation of peer dependencies (npm 7+ default)
# Setting this explicitly ensures consistent behavior
legacy-peer-deps=false

# Prevent package-lock.json modifications from hoisting changes
install-strategy=hoisted
