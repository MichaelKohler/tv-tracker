{
  "name": "tv-tracker",
  "private": true,
  "license": "MIT",
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "build": "remix vite:build",
    "delete:episode": "ts-node scripts/delete-episode.ts",
    "delete:episode:id": "ts-node scripts/delete-episode-by-id.ts",
    "delete:episode-link": "ts-node scripts/remove-inexistent-episode-links.ts",
    "dev": "remix vite:dev",
    "format": "prettier --write .",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/eslint .",
    "postinstall": "prisma generate",
    "setup": "prisma generate && prisma db push && prisma db seed",
    "start": "remix-serve ./build/server/index.js",
    "test": "SESSION_SECRET=secret vitest",
    "test:e2e:report": "playwright show-report",
    "test:e2e:run": "playwright test",
    "typecheck": "tsc -b",
    "update:episode:force": "ts-node scripts/force-episode-update.ts",
    "update:episodes": "ts-node scripts/get-new-episodes.ts",
    "update:episodes:info": "ts-node scripts/update-episodes.ts",
    "validate": "run-p \"test -- --run\" lint typecheck test:e2e:run"
  },
  "prettier": {
    "trailingComma": "es5"
  },
  "eslintIgnore": [
    "/node_modules",
    "/build",
    "/public/build"
  ],
  "dependencies": {
    "@libsql/client": "^0.5.6",
    "@node-rs/bcrypt": "^1.10.4",
    "@prisma/adapter-libsql": "^5.15.0",
    "@prisma/client": "^5.15.0",
    "@remix-run/node": "^2.9.2",
    "@remix-run/react": "^2.9.2",
    "@remix-run/serve": "^2.9.2",
    "@vercel/analytics": "^1.3.1",
    "@vitest/coverage-v8": "^1.6.0",
    "dotenv": "^16.4.5",
    "isbot": "^5.1.9",
    "nodemailer": "^6.9.13",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "striptags": "^3.2.0",
    "tiny-invariant": "^1.3.3"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.4.1",
    "@playwright/test": "^1.44.1",
    "@remix-run/dev": "^2.9.2",
    "@remix-run/eslint-config": "^2.9.2",
    "@testing-library/jest-dom": "^6.4.6",
    "@testing-library/react": "^16.0.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/eslint": "^8.56.10",
    "@types/nodemailer": "^6.4.15",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "axios": "^1.7.2",
    "esbuild-register": "^3.5.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.3.2",
    "prettier-plugin-tailwindcss": "^0.6.4",
    "prisma": "^5.15.0",
    "tailwindcss": "^3.4.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5",
    "vite": "^5.3.0",
    "vitest": "^1.6.0",
    "vitest-mock-extended": "^1.3.1"
  },
  "engines": {
    "node": ">=18"
  },
  "prisma": {
    "seed": "node --require esbuild-register prisma/seed.ts"
  },
  "version": "1.0.0"
}
