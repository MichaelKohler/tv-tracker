{
  "name": "tv-tracker",
  "private": true,
  "license": "MIT",
  "sideEffects": false,
  "scripts": {
    "build": "run-s build:*",
    "build:css": "npm run generate:css -- --minify",
    "build:remix": "remix build",
    "delete:episode": "ts-node scripts/delete-episode.ts",
    "dev": "run-p dev:*",
    "dev:css": "npm run generate:css -- --watch",
    "dev:remix": "node --require ./mocks ./node_modules/.bin/remix dev",
    "format": "prettier --write .",
    "generate:css": "tailwindcss -o ./app/styles/tailwind.css",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/eslint .",
    "setup": "prisma generate && prisma migrate deploy && prisma db seed",
    "start": "remix-serve build",
    "start:mocks": "node --require ./mocks ./node_modules/.bin/remix-serve build",
    "test": "SESSION_SECRET=secret vitest",
    "test:coverage": "SESSION_SECRET=secret vitest run --coverage",
    "test:e2e:dev": "PORT=8811 start-server-and-test dev http://localhost:8811 'npx playwright test'",
    "test:e2e:report": "npx playwright show-report",
    "test:e2e:trace": "PORT=8811 start-server-and-test dev http://localhost:8811 'npx playwright test --trace on'",
    "pretest:e2e:run": "npm run build",
    "test:e2e:run": "cross-env PORT=8811 start-server-and-test start:mocks http://localhost:8811 'npx playwright test'",
    "typecheck": "tsc -b",
    "update:episode:force": "ts-node scripts/force-episode-update.ts",
    "update:episodes": "ts-node scripts/get-new-episodes.ts",
    "update:episodes:info": "ts-node scripts/update-episodes.ts",
    "validate": "run-p \"test -- --run\" lint typecheck test:e2e:run"
  },
  "prettier": {},
  "eslintIgnore": [
    "/node_modules",
    "/build",
    "/public/build"
  ],
  "dependencies": {
    "@node-rs/bcrypt": "^1.6.2",
    "@prisma/client": "^4.12.0",
    "@remix-run/node": "^1.15.0",
    "@remix-run/react": "^1.15.0",
    "@remix-run/serve": "^1.15.0",
    "@remix-run/vercel": "^1.15.0",
    "@vitest/coverage-c8": "^0.29.8",
    "isbot": "^3.6.7",
    "nodemailer": "^6.9.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "striptags": "^3.2.0",
    "tiny-invariant": "^1.3.1"
  },
  "devDependencies": {
    "@faker-js/faker": "^7.6.0",
    "@playwright/test": "^1.32.1",
    "@remix-run/dev": "^1.15.0",
    "@remix-run/eslint-config": "^1.15.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/eslint": "^8.37.0",
    "@types/nodemailer": "^6.4.7",
    "@types/react": "^18.0.31",
    "@types/react-dom": "^18.0.11",
    "@vitejs/plugin-react": "^3.1.0",
    "axios": "^1.3.4",
    "c8": "^7.13.0",
    "cross-env": "^7.0.3",
    "esbuild-register": "^3.4.2",
    "eslint": "^8.37.0",
    "eslint-config-prettier": "^8.8.0",
    "jsdom": "^21.1.1",
    "msw": "^1.2.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.7",
    "prettier-plugin-tailwindcss": "^0.2.6",
    "prisma": "^4.12.0",
    "start-server-and-test": "^2.0.0",
    "tailwindcss": "^3.3.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.3",
    "vite-tsconfig-paths": "^4.0.7",
    "vitest": "^0.29.8",
    "vitest-mock-extended": "^1.1.3"
  },
  "engines": {
    "node": ">=18"
  },
  "prisma": {
    "seed": "node --require esbuild-register prisma/seed.ts"
  },
  "version": "1.0.0"
}
