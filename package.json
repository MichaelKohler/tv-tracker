{
  "name": "tv-tracker",
  "private": true,
  "license": "MIT",
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "build": "remix vite:build",
    "delete:episode": "tsx scripts/delete-episode.ts",
    "delete:episode:id": "tsx scripts/delete-episode-by-id.ts",
    "delete:episode-link": "tsx scripts/remove-inexistent-episode-links.ts",
    "dev": "remix vite:dev",
    "format": "prettier --write .",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/eslint .",
    "postinstall": "prisma generate",
    "setup": "prisma generate && prisma db push && prisma db seed",
    "start": "remix-serve ./build/server/index.js",
    "test": "SESSION_SECRET=secret vitest",
    "test:e2e:report": "playwright show-report",
    "test:e2e:run": "playwright test",
    "typecheck": "tsc -b",
    "update:episode:force": "tsx scripts/force-episode-update.ts",
    "update:episodes": "tsx scripts/get-new-episodes.ts",
    "update:episodes:info": "tsx scripts/update-episodes.ts",
    "validate": "run-p \"test -- --run\" lint typecheck test:e2e:run"
  },
  "prettier": {
    "trailingComma": "es5"
  },
  "eslintIgnore": [
    "/node_modules",
    "/build",
    "/public/build"
  ],
  "dependencies": {
    "@node-rs/bcrypt": "^1.10.4",
    "@prisma/client": "^5.18.0",
    "@remix-run/node": "^2.11.1",
    "@remix-run/react": "^2.11.1",
    "@remix-run/serve": "^2.11.1",
    "@sentry/remix": "^8.26.0",
    "@sentry/vite-plugin": "^2.22.2",
    "@vercel/analytics": "^1.3.1",
    "@vitest/coverage-v8": "^2.0.5",
    "dotenv": "^16.4.5",
    "isbot": "^5.1.16",
    "nodemailer": "^6.9.14",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "striptags": "^3.2.0",
    "tiny-invariant": "^1.3.3"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.4.1",
    "@playwright/test": "^1.46.0",
    "@remix-run/dev": "^2.11.1",
    "@remix-run/eslint-config": "^2.11.1",
    "@testing-library/jest-dom": "^6.4.8",
    "@testing-library/react": "^16.0.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/eslint": "^8.56.10",
    "@types/nodemailer": "^6.4.15",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "axios": "^1.7.4",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.6",
    "prisma": "^5.18.0",
    "tailwindcss": "^3.4.10",
    "tsx": "^4.17.0",
    "typescript": "^5.5.4",
    "vite": "^5.4.1",
    "vitest": "^2.0.5",
    "vitest-mock-extended": "^2.0.0"
  },
  "engines": {
    "node": ">=18"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "version": "1.0.0"
}
