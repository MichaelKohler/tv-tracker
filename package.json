{
  "name": "tv-tracker",
  "private": true,
  "license": "MIT",
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "build": "react-router build",
    "delete:episode": "tsx scripts/delete-episode.ts",
    "delete:episode:id": "tsx scripts/delete-episode-by-id.ts",
    "delete:episode-link": "tsx scripts/remove-inexistent-episode-links.ts",
    "dev": "react-router dev",
    "dev:host": "react-router dev --host",
    "format": "prettier --write .",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/eslint .",
    "postinstall": "prisma generate",
    "setup": "prisma generate && prisma db push && prisma db seed",
    "start": "react-router-serve ./build/server/index.js",
    "test": "SESSION_SECRET=secret vitest",
    "test:e2e:report": "playwright show-report",
    "test:e2e:run": "playwright test",
    "typecheck": "tsc -b",
    "update:episode:force": "tsx scripts/force-episode-update.ts",
    "update:episodes": "tsx scripts/get-new-episodes.ts",
    "update:episodes:info": "tsx scripts/update-episodes.ts",
    "validate": "run-p \"test -- --run\" lint typecheck test:e2e:run"
  },
  "prettier": {
    "trailingComma": "es5"
  },
  "dependencies": {
    "@node-rs/bcrypt": "^1.10.7",
    "@prisma/client": "^6.3.1",
    "@react-router/node": "^7.0.0",
    "@react-router/serve": "^7.0.0",
    "@tailwindcss/postcss": "^4.0.6",
    "@vitest/coverage-v8": "^3.0.5",
    "dotenv": "^16.4.7",
    "isbot": "^5.1.22",
    "nodemailer": "^6.10.0",
    "postcss": "^8.5.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-router": "^7.0.0",
    "striptags": "^3.2.0",
    "tiny-invariant": "^1.3.3"
  },
  "devDependencies": {
    "@eslint/compat": "^1.2.6",
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.19.0",
    "@faker-js/faker": "^9.4.0",
    "@playwright/test": "^1.50.1",
    "@react-router/dev": "^7.0.0",
    "@react-router/fs-routes": "^7.0.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/eslint": "^9.6.1",
    "@types/nodemailer": "^6.4.17",
    "@types/react": "^19.0.9",
    "@types/react-dom": "^19.0.3",
    "@typescript-eslint/eslint-plugin": "^8.23.0",
    "axios": "^1.8.2",
    "eslint": "^9.19.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-import-resolver-typescript": "^3.7.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.1.0",
    "globals": "^15.14.0",
    "jsdom": "^26.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.4.2",
    "prettier-plugin-tailwindcss": "^0.6.9",
    "prisma": "^6.3.1",
    "tailwindcss": "^4.0.6",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "vite": "^6.2.4",
    "vitest": "^3.0.5",
    "vitest-mock-extended": "^2.0.2"
  },
  "engines": {
    "node": ">=18"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "version": "2.0.0"
}
