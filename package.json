{
  "name": "tv-tracker",
  "private": true,
  "license": "MIT",
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "build": "react-router build",
    "delete:episode": "tsx scripts/delete-episode.ts",
    "delete:episode:id": "tsx scripts/delete-episode-by-id.ts",
    "delete:episode-link": "tsx scripts/remove-inexistent-episode-links.ts",
    "dev": "react-router dev",
    "dev:host": "react-router dev --host",
    "format": "prettier --write .",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/eslint .",
    "postinstall": "prisma generate",
    "setup": "prisma generate && prisma db push && prisma db seed",
    "start": "react-router-serve ./build/server/index.js",
    "test": "SESSION_SECRET=secret vitest",
    "test:e2e": "npm run test:e2e:setup && npm run test:e2e:run && npm run test:e2e:teardown",
    "test:e2e:report": "playwright show-report",
    "test:e2e:run": "node --env-file=.env.e2e ./node_modules/.bin/playwright test",
    "test:e2e:setup": "docker compose -f docker-compose.e2e.yml up -d && sh -c 'for i in {1..30}; do if node --env-file=.env.e2e ./node_modules/.bin/prisma db push --accept-data-loss 2>/dev/null; then break; fi; echo \"Waiting for PostgreSQL ($i/30)...\"; sleep 2; done' && node --env-file=.env.e2e ./node_modules/.bin/prisma db seed",
    "test:e2e:teardown": "docker compose -f docker-compose.e2e.yml down -v",
    "typecheck": "tsc -b",
    "update:episode:force": "tsx scripts/force-episode-update.ts",
    "update:episodes": "tsx scripts/get-new-episodes.ts",
    "update:episodes:info": "tsx scripts/update-episodes.ts",
    "update:show:status": "tsx scripts/update-show-status.ts",
    "validate": "run-p \"test -- --run\" lint typecheck test:e2e"
  },
  "prettier": {
    "trailingComma": "es5"
  },
  "dependencies": {
    "@flipt-io/flipt": "^1.2.0",
    "@heroicons/react": "^2.1.5",
    "@node-rs/bcrypt": "^1.10.7",
    "@prisma/client": "^6.6.0",
    "@react-router/node": "^7.5.1",
    "@react-router/serve": "^7.5.1",
    "@tailwindcss/postcss": "^4.1.4",
    "@vitest/coverage-v8": "^3.1.2",
    "entities": "^6.0.1",
    "isbot": "^5.1.26",
    "nodemailer": "^7.0.4",
    "postcss": "^8.5.2",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router": "^7.5.1",
    "recharts": "^3.1.0",
    "striptags": "^3.2.0",
    "tiny-invariant": "^1.3.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.1",
    "@faker-js/faker": "^9.7.0",
    "@playwright/test": "^1.52.0",
    "@react-router/dev": "^7.5.1",
    "@react-router/fs-routes": "^7.5.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/eslint": "^9.6.1",
    "@types/node": "^24.1.0",
    "@types/nodemailer": "^6.4.17",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@types/recharts": "^1.8.29",
    "eslint": "^9.25.1",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "globals": "^16.0.0",
    "jsdom": "^26.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.9",
    "prisma": "^6.6.0",
    "tailwindcss": "^4.1.4",
    "tsx": "^4.19.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.39.1",
    "vite": "^7.0.6",
    "vitest": "^3.2.4",
    "vitest-mock-extended": "^3.1.0"
  },
  "engines": {
    "node": ">=22.6"
  },
  "prisma": {
    "seed": "node --experimental-strip-types prisma/seed.ts"
  },
  "version": "2.0.0"
}
