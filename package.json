{
  "name": "tv-tracker",
  "private": true,
  "license": "MIT",
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "build": "remix vite:build",
    "delete:episode": "tsx scripts/delete-episode.ts",
    "delete:episode:id": "tsx scripts/delete-episode-by-id.ts",
    "delete:episode-link": "tsx scripts/remove-inexistent-episode-links.ts",
    "dev": "remix vite:dev",
    "format": "prettier --write .",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/eslint .",
    "postinstall": "prisma generate",
    "setup": "prisma generate && prisma db push && prisma db seed",
    "start": "remix-serve ./build/server/index.js",
    "test": "SESSION_SECRET=secret vitest",
    "test:e2e:report": "playwright show-report",
    "test:e2e:run": "playwright test",
    "typecheck": "tsc -b",
    "update:episode:force": "tsx scripts/force-episode-update.ts",
    "update:episodes": "tsx scripts/get-new-episodes.ts",
    "update:episodes:info": "tsx scripts/update-episodes.ts",
    "validate": "run-p \"test -- --run\" lint typecheck test:e2e:run"
  },
  "prettier": {
    "trailingComma": "es5"
  },
  "eslintIgnore": [
    "/node_modules",
    "/build",
    "/public/build"
  ],
  "dependencies": {
    "@node-rs/bcrypt": "^1.10.7",
    "@prisma/client": "^6.0.1",
    "@remix-run/node": "^2.15.0",
    "@remix-run/react": "^2.15.0",
    "@remix-run/serve": "^2.15.0",
    "@sentry/remix": "^8.42.0",
    "@sentry/vite-plugin": "^2.22.7",
    "@vercel/analytics": "^1.4.1",
    "@vitest/coverage-v8": "^2.1.8",
    "dotenv": "^16.4.7",
    "isbot": "^5.1.17",
    "nodemailer": "^6.9.16",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "striptags": "^3.2.0",
    "tiny-invariant": "^1.3.3"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.3.0",
    "@playwright/test": "^1.49.0",
    "@remix-run/dev": "^2.15.0",
    "@remix-run/eslint-config": "^2.15.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/eslint": "^8.56.10",
    "@types/nodemailer": "^6.4.17",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "axios": "^1.7.9",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.4.2",
    "prettier-plugin-tailwindcss": "^0.6.9",
    "prisma": "^6.0.1",
    "tailwindcss": "^3.4.16",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vite": "^6.0.3",
    "vitest": "^2.1.8",
    "vitest-mock-extended": "^2.0.2"
  },
  "engines": {
    "node": ">=18"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "version": "1.0.0"
}
