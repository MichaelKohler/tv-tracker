{
  "name": "tv-tracker",
  "private": true,
  "license": "MIT",
  "sideEffects": false,
  "scripts": {
    "build": "run-s build:*",
    "build:css": "npm run generate:css -- --minify",
    "build:remix": "remix build",
    "delete:episode": "ts-node scripts/delete-episode.ts",
    "dev": "run-p dev:*",
    "dev:css": "npm run generate:css -- --watch",
    "dev:remix": "node --require ./node_modules/.bin/remix dev",
    "format": "prettier --write .",
    "generate:css": "tailwindcss -o ./app/styles/tailwind.css",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/eslint .",
    "setup": "prisma generate && prisma migrate deploy && prisma db seed",
    "start": "remix-serve ./build/index.js",
    "test": "SESSION_SECRET=secret vitest",
    "test:coverage": "SESSION_SECRET=secret vitest run --coverage",
    "test:e2e:dev": "PORT=8811 start-server-and-test dev http://localhost:8811 'npx playwright test'",
    "test:e2e:report": "npx playwright show-report",
    "test:e2e:trace": "PORT=8811 start-server-and-test dev http://localhost:8811 'npx playwright test --trace on'",
    "postinstall": "prisma generate",
    "pretest:e2e:run": "npm run build",
    "test:e2e:run": "cross-env PORT=8811 start-server-and-test http://localhost:8811 'npx playwright test'",
    "typecheck": "tsc -b",
    "update:episode:force": "ts-node scripts/force-episode-update.ts",
    "update:episodes": "ts-node scripts/get-new-episodes.ts",
    "update:episodes:info": "ts-node scripts/update-episodes.ts",
    "validate": "run-p \"test -- --run\" lint typecheck test:e2e:run"
  },
  "prettier": {
    "trailingComma": "es5"
  },
  "eslintIgnore": [
    "/node_modules",
    "/build",
    "/public/build"
  ],
  "dependencies": {
    "@node-rs/bcrypt": "^1.7.3",
    "@prisma/client": "^5.7.0",
    "@remix-run/node": "^2.3.1",
    "@remix-run/react": "^2.3.1",
    "@remix-run/serve": "^2.3.1",
    "@vitest/coverage-v8": "^0.34.5",
    "isbot": "^3.7.1",
    "nodemailer": "^6.9.7",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "striptags": "^3.2.0",
    "tiny-invariant": "^1.3.1"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.3.1",
    "@playwright/test": "^1.40.1",
    "@remix-run/dev": "^2.3.1",
    "@remix-run/eslint-config": "^2.3.1",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/eslint": "^8.44.8",
    "@types/nodemailer": "^6.4.14",
    "@types/react": "^18.2.42",
    "@types/react-dom": "^18.2.17",
    "axios": "^1.6.2",
    "cross-env": "^7.0.3",
    "esbuild-register": "^3.5.0",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "jsdom": "^22.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.1.0",
    "prettier-plugin-tailwindcss": "^0.5.9",
    "prisma": "^5.7.0",
    "start-server-and-test": "^2.0.3",
    "tailwindcss": "^3.3.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "vitest": "^0.34.2",
    "vitest-mock-extended": "^1.3.1"
  },
  "engines": {
    "node": ">=18"
  },
  "prisma": {
    "seed": "node --require esbuild-register prisma/seed.ts"
  },
  "version": "1.0.0"
}
